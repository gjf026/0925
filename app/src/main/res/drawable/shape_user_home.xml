<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/color_theme_80"
                android:endColor="@color/color_theme_20"
                android:type="radial"
                android:gradientRadius="80" />
            <corners android:radius="5.0mm" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="5.0mm" />
            <stroke android:width="1.5mm" android:color="@color/color_theme_h" />
            <gradient android:type="radial"
                android:angle="0"
                android:gradientRadius="100dp"
                android:startColor="@color/color_theme_80"
                android:endColor="@color/color_theme_40"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <corners android:radius="5.0mm" />
            <stroke android:width="1.0mm" android:color="@color/color_33FFFFFF" />
            <gradient android:type="radial"
                android:angle="0"
                android:gradientRadius="100dp"
                android:startColor="@color/color_theme_40"
                android:endColor="@color/color_theme_80"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>
</selector>